<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Solid</item>
    </style>
    
    <style name="AppTheme.SmallActionBar" parent="@style/AppTheme">
        <item name="android:actionBarSize">40dp</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>
    
    <style name="AppTheme.TranslucentAB" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    
    <style name="AppTheme.ActionBar.Translucent" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>
    
    <style name="AppTheme.ActionBar.Translucent.Solid" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>
    
    <style name="AppTheme.ActionBar.Solid" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_solid_bg</item>
    </style>
    
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_solid_bg</item>
    </style>
</resources>