<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_child"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

	<TextView
	    android:id="@+id/textview_child_count"
	    style="@style/MediumText.Italic"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="@dimen/listview_indicator_child_size"
	    android:text="@string/filler_child_count" />

    <TextView
        android:id="@+id/textview_child_details"
        style="@style/MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/textview_child_count"
        android:text="@string/filler_child_networkdetails" />
   
    <TextView
        android:id="@+id/label_child_level"
        style="@style/MediumText.Alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/textview_child_details"
        android:text="@string/constant_label_level" />
    <TextView
        android:id="@+id/textview_child_level"
        style="@style/MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/label_child_level"
        android:text="@string/filler_signal_level" />

    <TextView
        android:id="@+id/label_child_timestamp"
        style="@style/MediumText.Alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textview_child_timestamp"
        android:text="@string/constant_label_timestamp" />
     <TextView
         android:id="@+id/textview_child_timestamp"
         style="@style/MediumText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginLeft="2dp"
         android:layout_marginRight="25dp"
         android:text="@string/filler_timestamp" />

</RelativeLayout>